{
  "name": "intrfce/laravel-reportable",
  "description": "Run large queries and export them to CSV files for reports in Laravel.",
  "keywords": [
    "intrfce",
    "laravel",
    "reportable",
    "reports",
    "csv",
    "export"
  ],
  "homepage": "https://github.com/intrfce/laravel-reportable",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Dan Matthews",
      "email": "dan@danmatthews.me",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.3.0",
    "laravel/framework": "^12.0",
    "league/csv": "^9.0"
  },
  "require-dev": {
    "orchestra/testbench": "^10.0",
    "pestphp/pest": "^3.7",
    "tightenco/duster": "^2.5"
  },
  "autoload": {
    "psr-4": {
      "Intrfce\\LaravelReportable\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Intrfce\\LaravelReportable\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage-html coverage"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Intrfce\\LaravelReportable\\LaravelReportableServiceProvider"
      ]
    }
  }
}
